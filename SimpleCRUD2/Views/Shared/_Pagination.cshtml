@model SimpleCRUD2.Models.PageInfo

<ul class="pagination pagination-sm">
    @if (Model.PageNumber > 1)
    {
        <li><a href="@Url.Action(Model.ActionName, Model.ControllerName, new { name = ViewBag.CourseName, pageNumber = Model.PageNumber - 1 })">&laquo;</a></li>
    }
    else
    {
        <li class="disabled"><a href="#">&laquo;</a></li>
    }

    @for (int i = Model.PageNumber - 2; i <= Model.PageNumber + 2 & i <= Model.TotalPages; i++)
    {
        if (i == Model.PageNumber)
        {
            <li class="active"><a href="@Url.Action(Model.ActionName, Model.ControllerName, new { name = ViewBag.CourseName, pageNumber = i })">@i</a></li>
        }
        if (i > 0 & i != Model.PageNumber)
        {
            <li><a href="@Url.Action(Model.ActionName, Model.ControllerName, new { name = ViewBag.CourseName, pageNumber = i })">@i</a></li>
        }
    }

    @if (Model.PageNumber < Model.TotalPages)
    {
        <li><a href="@Url.Action(Model.ActionName, Model.ControllerName, new { name = ViewBag.CourseName, pageNumber = Model.PageNumber + 1 })">&raquo;</a></li>
    }
    else
    {
        <li class="disabled"><a href="#">&raquo;</a></li>
    }

</ul>

