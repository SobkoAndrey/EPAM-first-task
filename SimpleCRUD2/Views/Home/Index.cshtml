@model IEnumerable<SimpleCRUD2.Models.UserModel>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.ActionLink("Create new user", "AddUser", "Home", new {}, new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-striped table-hover" border="1" cellpadding="2" >
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Город</th>
                <th>День рождения</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name 
                    <input type="hidden" value="@user.UserId" />
                    </td>
                    <td>@user.Surname
                    </td>
                    <td>@user.Location
                    </td>
                    <td>@if (user.Birthday != null) {
                        @user.Birthday.Value.ToShortDateString();
                    } else
                    {
                        <span>Empty</span>
                    }
                    </td>
                    <td>@Html.ActionLink("Edit", "EditUserInfo", "Home", new { id = user.UserId }, new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Delete", "DeleteUser", "Home", new { id = user.UserId }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
                }
        </tbody>
    </table>

</body>
</html>
