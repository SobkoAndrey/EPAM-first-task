@model SimpleCRUD2.Models.ViewModels.IndexViewModel


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.ActionLink("Create new user", "AddUser", "Home", new { }, new { @class = "btn btn-success" })
    </div>
    <br />
    <table class="table table-striped table-hover" border="1" cellpadding="2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Location</th>
                <th>Birthday</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        @user.Name
                        <input type="hidden" value="@user.UserId" />
                    </td>
                    <td>
                        @user.Surname
                    </td>
                    <td>
                        @user.Location
                    </td>
                    <td>
                        @if (user.Birthday != null)
                        {
                            @user.Birthday.Value.ToShortDateString();
                        }
                        else
                        {
                            <span>Empty</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUserInfo", "Home", new { id = user.UserId }, new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Delete", "DeleteUser", "Home", new { id = user.UserId }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <ul class="pagination pagination-sm">
        @if (Model.PageInfo.PageNumber > 1)
        {
            <li><a href="@Url.Action("Index", "Home", new { page = Model.PageInfo.PageNumber - 1 })">&laquo;</a></li>
        }
        else
        {
            <li class="disabled"><a href="#">&laquo;</a></li>
        }

        @for (int i = Model.PageInfo.PageNumber - 2; i <= Model.PageInfo.PageNumber + 2 & i <= Model.PageInfo.TotalPages; i++)
        {
            if (i > 0)
            {
                <li id="@i"><a href="@Url.Action("Index", "Home", new { page = i })">@i</a></li>
            }
        }

        @if (Model.PageInfo.PageNumber < Model.PageInfo.TotalPages)
        {
            <li><a href="@Url.Action("Index", "Home", new { page = Model.PageInfo.PageNumber + 1 })">&raquo;</a></li>
        }
        else
        {
            <li class="disabled"><a href="#">&raquo;</a></li>
        }

    </ul>
</body>
</html>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var a = @Model.PageInfo.PageNumber;

            var activeLi = $('li#'+a);

            activeLi.addClass('active');
        });
    </script>
}